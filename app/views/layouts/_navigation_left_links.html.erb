<% if session[:user_id] %>
	<li class="dropdown">
		<%= link_to root_path, class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
		资产 <b class="caret"></b>
		<% end %>
		<ul class="dropdown-menu">
      <li><%= link_to '服务器', servers_path %></li>
      <li><%= link_to '网络设备', network_devices_path %></li>
      <li><%= link_to '软件', softwares_path %></li>
      <li><%= link_to '应用系统', systems_path %></li>
    </ul>
	</li>
	<li><%= link_to '文档', root_path %></li>
	<% if current_user.admin %>
		<li><%= link_to '用户', users_path %></li>
	<% end %>
<% end %>
<li><%= link_to '帮助', help_path %></li>

<script type="text/javascript">
	$(function() {
	  // dropdown
	  $('a').hover(function() {
	  	$(this).parent('li').addClass('open').siblings('li').removeClass('open');
	  });

	});
</script>