<% content_for :title, "服务器列表" %>


<h1 class="text-myBlue">服务器列表</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>服务器名</th>
        <th>IP地址</th>
        <th>iLO地址</th>
        <th>SN号</th>
        <th>服务到期</th>
        <th>动作</th>
      </tr>
    </thead>

    <tbody>
      <% @servers.each do |server| %>
        <tr>
          <td><%= server.name %></td>
          <td><%= server.ip %></td>
          <td><%= server.ilo %></td>
          <td><%= server.sn %></td>
          <td><%= server.service_expired_day %></td>
          <td>
            <%= link_to server, class: "btn btn-success btn-xs show-tootip", "data-toggle" => "tooltip", "data-placement" => "top", title: "详情" do %>
              <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to edit_server_path(server), class: "btn btn-warning btn-xs show-tootip", "data-toggle" => "tooltip", "data-placement" => "top", title: "修改" do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to server, method: :delete, data: { confirm: "删除服务器 #{server.name} 吗？" }, class: "btn btn-danger btn-xs show-tootip", "data-toggle" => "tooltip", "data-placement" => "top", title: "删除" do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'layouts/pagination' %>

<% content_for :sidebar do %>
  <div class="text-center" style="margin-top: 70px;">
    <%= link_to new_server_path, class: "btn btn-success" do%>
    新建服务器信息 <i class="fa fa-arrow-circle-right"></i>
    <% end %>
  </div>
<% end %>
