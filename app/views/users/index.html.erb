<%= provide :title, "Listing users" %>

<h1>Listing users</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to edit_user_path(user), class: "btn btn-warning btn-xs" do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to user, method: :delete, data: { confirm: "Are you sure to delete user #{user.name} ?" }, class: "btn btn-danger btn-xs" do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
