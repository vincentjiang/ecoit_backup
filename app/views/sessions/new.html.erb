<% provide :title, "登录" %>

<div class="container">
	<div id="login">
		<div class="col-sm-6 col-sm-offset-3">
			<h1 class="text-center">请登录</h1>

			<%= form_for :session, url: login_path , class: "form" do |f| %>
				<div class="form-group">
					<div class="input-group input-group-lg">
			      <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
			      <%= f.text_field :name, class: "form-control", placeholder: "用户名" %>
			    </div>
			  </div>

			  <div class="form-group">
					<div class="input-group input-group-lg">
			      <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
			      <%= f.password_field :password, class: "form-control", placeholder: "密码" %>
			    </div>
			  </div>

			  <br>

			  <div class="form-group">
					<%= f.submit "登录", data: { disable_with: '努力登录中...' }, class: "btn btn-primary btn-block btn-lg" %>
			  </div>
			<% end %>
		 </div>
	</div>
</div>