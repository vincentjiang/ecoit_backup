<% content_for :title, "主页" %>

<div id="index_page" class="text-center">
	<h1>ECO IT System</h1>
	<p>—— An IT System for improving work efficiency</p>
	<% unless session[:user_id]  %>
		<%= link_to login_path, class: "btn btn-index btn-lg" do %>
			登录系统 <i class="fa fa-sign-in"></i>
		<% end %>
	<% else %>
		<% if current_user.admin %>
			<div class="row" style="margin: 40px 0;">
				<div class="col-sm-4">
					<%= link_to users_path, class: "btn btn-success btn-lg btn-block", style: "margin-top: 10px" do %>
						<i class="fa fa-gears fa-fw"></i> 资产 <i class="fa fa-arrow-circle-right"></i>
					<% end %>
				</div>
				<div class="col-sm-4">
					<%= link_to users_path, class: "btn btn-info btn-lg btn-block", style: "margin-top: 10px" do %>
						<i class="fa fa-file"></i> 文档 <i class="fa fa-arrow-circle-right"></i>
					<% end %>
				</div>
				<div class="col-sm-4">
					<%= link_to users_path, class: "btn btn-warning btn-lg btn-block", style: "margin-top: 10px" do %>
						<i class="fa fa-users"></i> 用户 <i class="fa fa-arrow-circle-right"></i>
					<% end %>
				</div>
			</div>
		<% else %>
			<div class="row" style="margin: 50px 0;">
				<div class="col-sm-6">
					<%= link_to users_path, class: "btn btn-info btn-lg btn-block", style: "margin-top: 10px" do %>
						<i class="fa fa-gears fa-fw"></i> 资产 <i class="fa fa-arrow-circle-right"></i>
					<% end %>
				</div>
				<div class="col-sm-6">
					<%= link_to users_path, class: "btn btn-warning btn-lg btn-block", style: "margin-top: 10px" do %>
						<i class="fa fa-file"></i> 文档 <i class="fa fa-arrow-circle-right"></i>
					<% end %>
				</div>
			</div>
		<% end %>
	<% end %>
</div>
