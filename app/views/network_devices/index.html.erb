<% content_for :title, "网络设备列表" %>


<h1 class="text-myBlue">网络设备列表</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>设备名</th>
        <th>IP地址</th>
        <th>设备类型</th>
        <th>SN号</th>
        <th>服务到期日期</th>
        <th>动作</th>
      </tr>
    </thead>

    <tbody>
      <% @network_devices.each do |network_device| %>
        <tr>
          <td><%= network_device.name %></td>
          <td><%= network_device.ip %></td>
          <td><%= network_device.kind %></td>
          <td><%= network_device.sn %></td>
          <td><%= network_device.service_expired_day %></td>
          <td>
            <%= link_to network_device, class: "btn btn-success btn-xs show-tootip", "data-toggle" => "tooltip", "data-placement" => "top", title: "详情" do %>
              <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to edit_network_device_path(network_device), class: "btn btn-warning btn-xs show-tootip", "data-toggle" => "tooltip", "data-placement" => "top", title: "修改" do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to network_device, method: :delete, data: { confirm: "删除服务器 #{network_device.name} 吗？" }, class: "btn btn-danger btn-xs show-tootip", "data-toggle" => "tooltip", "data-placement" => "top", title: "删除" do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'layouts/pagination' %>

<% content_for :sidebar do %>
  <div class="text-center" style="margin-top: 70px;">
    <%= link_to new_network_device_path, class: "btn btn-success" do%>
    新建网络设备 <i class="fa fa-arrow-circle-right"></i>
    <% end %>
  </div>
<% end %>
