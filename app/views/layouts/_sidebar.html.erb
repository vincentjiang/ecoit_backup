<div id="sidebar">
	<form id="search" action="">
		<div class="input-group">
			<input type="text" class="form-control" placeholder="Input anything">
			<span class="input-group-btn">
        <button class="btn btn-default" type="button"><i class="fa fa-search fa-fw"></i></button>
      </span>
		</div>
	</form>
	
	<ul class="nav nav-unstyled">
		<li class="kind"><a id="assets-sidebar" href="#"><i class="fa fa-gears fa-fw"></i> Assets <i class="fa fa-chevron-right pull-right"></i></a></li>
		<li class="kind"><a id="docs-sidebar" href="#"><i class="fa fa-file fa-fw"></i> Docs <i class="fa fa-chevron-right pull-right"></i></a></li>
		<% if session[:user_id] && current_user.admin %>
			<li class="kind">
				<a id="users-sidebar" data-toggle="collapse" data-parent="#sidebar" href="#demo"><i class="fa fa-users fa-fw"></i> Users <i class="fa fa-chevron-right pull-right"></i></a>
				<ul id="demo" class="nav nav-unstyled collapse">
					<% @users.each do |user| %>
						<li class="item"><a href="<%= edit_user_path(user) %>"><%= user.name %></a></li>
					<% end %>
				</ul>
			</li>
		<% end %>
	</ul>
</div>