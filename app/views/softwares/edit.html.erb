<% content_for :title, "修改软件信息" %>

<h1 class="text-myBlue">修改软件信息</h1>

<%= form_for(@software, html: { class: "form-horizontal" }) do |f| %>

  <div class="form-group">
    <%= f.label :name, "软件名称：", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :kind, "软件类型：", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :kind, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sn, "SN号：", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :sn, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :service_expired_day, "服务到期日期：", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.date_select :service_expired_day, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :function, "设备用途：", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_area :function, class: "form-control", rows: "5" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :remark, "备注：", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_area :remark, class: "form-control", rows: "5" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit "提交", :disable_with => '正在提交...', class: "btn btn-primary" %><%= link_to 'Back', softwares_path, class: "btn btn-link" %>
    </div>
  </div>

<% end %>
