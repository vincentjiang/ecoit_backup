<% provide :title, '更改密码' %>

<h1 class="text-myBlue">更改密码</h1>

<%= form_for :user, url: update_password_path(current_user), html: { class: "form-horizontal" } do |f| %>

	<div class="form-group">
		<%= f.label :password, "当前密码", class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.password_field :password, class: "form-control", placeholder: "当前密码", required: true %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :password_new, "新密码", class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.password_field :password_new, class: "form-control", placeholder: "新密码", required: true %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :password_new_confirmation, "确认新密码", class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.password_field :password_new_confirmation, class: "form-control", placeholder: "再输一次新密码", required: true %>
		</div>
	</div>

	<br>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<%= f.submit "提交", :disable_with => '正在提交...', class: "btn btn-primary" %>
			<%= link_to '返回', :back, class: "btn btn-link" %>

		</div>
	</div>
<% end %>
  
