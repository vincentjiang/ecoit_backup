<%= provide :title, "New user" %>

<h1 class="text-purple">New user</h1>

<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control", placeholder: "Login account" %>
    </div>
    <div class="col-sm-5">
      <% if @user.errors[:name].any? %>
        <span class="help-block text-danger"><p class="text-danger"><%= @user.errors.full_messages_for(:name)[0] %></p></span>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :email, class: "form-control", placeholder: "username@example.com" %>
    </div>
    <div class="col-sm-5">
      <% if @user.errors[:email].any? %>
        <span class="help-block text-danger"><p class="text-danger"><%= @user.errors.full_messages_for(:email)[0] %></p></span>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :admin, "Role", class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.select :admin, [["Admin", true], ["Common user", false]], {}, class: "form-control", placeholder: "username@example.com" %>
    </div>
    <div class="col-sm-5">
      <% if @user.errors[:admin].any? %>
        <span class="help-block text-danger"><p class="text-danger"><%= @user.errors.full_messages_for(:admin)[0] %></p></span>
      <% end %>
    </div>
  </div>

  <div class="form-group">

    <%= f.label :password, class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.password_field :password, class: "form-control", placeholder: "Login password" %>
    </div>
    <div class="col-sm-5">
      <% if @user.errors[:password].any? %>
        <span class="help-block text-danger"><p class="text-danger"><%= @user.errors.full_messages_for(:password)[0] %></p></span>
      <% end %>
    </div>

  </div>

  <div class="form-group">

    <%= f.label :password_confirmation, "Verify", class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Login password again" %>
    </div>
    <div class="col-sm-5">
      <% if @user.errors[:password_confirmation].any? %>
        <span class="help-block text-danger"><p class="text-danger"><%= @user.errors.full_messages_for(:password_confirmation)[0] %></p></span>
      <% end %>
    </div>

  </div>

  <br>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back', users_path, class: "btn btn-link" %>
    </div>
  </div>

<% end %>
